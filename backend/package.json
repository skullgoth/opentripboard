{
  "name": "opentripboard-backend",
  "version": "1.0.0",
  "description": "Travel Planning Suite - Backend API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.js",
    "test:coverage": "vitest run --coverage",
    "migrate": "node src/db/migrate.js",
    "migrate:down": "node src/db/migrate.js down",
    "db:reset": "node src/db/migrate.js reset",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "travel",
    "planning",
    "itinerary",
    "collaboration"
  ],
  "author": "",
  "license": "AGPLv3",
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.3",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^6.12.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@fastify/websocket": "^8.3.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "bcrypt": "^5.1.1",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.0",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.2.4",
    "pdfkit": "^0.15.0",
    "pg": "^8.11.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "sharp": "^0.33.5",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
